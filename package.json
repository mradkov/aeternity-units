    "conversion"
  ],
  "author": "Milen Radkov <milenradkov@me.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mradkov/aeternity-units/issues"
  },
  "homepage": "https://github.com/mradkov/aeternity-units#readme",
  "dependencies": {
    "bignumber.js": "^2.3.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "standard": "^5.4.1"
